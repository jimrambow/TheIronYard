- @locations.each do |location|
  .row
    .col-md-9
      %h2
        = link_to "#{location.city}, #{location.state}", location_path(location)
      %p= location.blurb
    .col-md-3
      .btn-container
        = link_to "Learn More", location_path(location), class: "btn btn-default"
          
    .col-xs-12
      %ul
      - location.offerings.each do |offering|
        %li
          %h4
            = link_to offering.course.title, course_path(offering.course.id)

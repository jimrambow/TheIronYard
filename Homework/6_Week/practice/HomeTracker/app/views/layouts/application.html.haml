!!!
%html
  %head
    %title HomeworkTracker
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#{root_path}"} The Iron Tracker
          - if user_signed_in?
            %a.navbar-brand
              = current_user.role.humanize
        .navbar-collapse.collapse
          %div.navbar-form.navbar-right{:role => "form"}
            .form-group
              = render 'devise/menu/registration_items'
            .form-group
              = render 'devise/menu/login_items'
            / .form-group
            /   %input.form-control{:placeholder => "Email", :type => "text"}/
            / .form-group
            /   %input.form-control{:placeholder => "Password", :type => "password"}/
            / %button.btn.btn-success{:type => "submit"} Sign in
        / /.navbar-collapse





    %p.notice= notice
    %p.alert= alert
    .container
      = yield

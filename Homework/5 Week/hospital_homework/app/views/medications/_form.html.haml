= link_to "Back", hospital_patient_path(@hospital, @patient, @medication)
= form_for [@hospital, @patient, @medication] do |f|
  - if  f.object.errors.messages.length > 0
    - f.object.errors.messages.inspect
    %br/
    - f.object.errors.messages.each do |key, value|
      - value.each do |message|
        = key.capitalize
        = message
        %br/
      %br/
  = f.label :name
  = f.text_field :name
  %br/
  = f.label :description, "Place dosing information!"
  = f.text_field :description
  %br/
  = f.submit "Save Prescription", disabled: "disabled", class: "submit"
  %div.notice
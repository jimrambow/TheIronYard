= form_for [@subscriber] do |f|
  - if @subscriber.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subscriber.errors.count, "error")} prohibited this message from being sent:"
      %ul
        - @subscriber.errors.full_messages.each do |msg|
          %li= msg

  .input
    = f.text_field :first_name, :placeholder => "First Name"
    = f.text_field :last_name, :placeholder => "Last Name"
    = f.text_field :date_of_birth, :placeholder => "Birthday"
    = f.text_field :email, :placeholder => "Email Address"
    %br
    = f.submit "SUBMIT", class: "radius button left"

= form_for @feature do |f|
  - if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control", placeholder: "PLease fill out your name"
  .form-group
    = f.label :cost
    = f.text_field :cost, class: "form-control"
  .form-group    
    = f.label :description
    = f.text_area :description, class: "form-control"
  .form-group    
    = f.submit 'Save'

- if user_signed_in?

  = link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-success"
- else
  / %li
  /   = link_to('Login', new_user_session_path)
  / .form-group
  /   %input.form-control{:placeholder => "Email", :type => "text"}/
  / .form-group
